{
  "root_path": "/mnt/kb",
  "ocr_enabled": true,
  "allow_any_path": false,
  "facet_regex": [
    {
      "name": "anno_da_path",
      "field": "year",
      "pattern": "(^|/)(20\\d{2})(/|_|-)",
      "scope": "path"
    },
    {
      "name": "anno_da_file",
      "field": "year",
      "pattern": "(?:^|[^\\d])((?:19|20)\\d{2})(?:[^\\d]|$)",
      "scope": "file"
    },
    {
      "name": "area_da_dir",
      "field": "area",
      "pattern": "(?i)^(?:0{0,2}[1-9]|1[0-9])_?\\s*(Documentazione|Chiarimenti|AS|Offerta\\s?Tecnica|ODA|Participation|Partecipation|Declaration|Allegati.*|Progetto.*)$",
      "scope": "dir"
    },
    {
      "name": "area_da_path",
      "field": "area",
      "pattern": "(?i)(?:^|/)(Documentazione|Chiarimenti|AS|Offerta\\s?Tecnica|ODA|Participation|Partecipation|Declaration)(?:/|$)",
      "scope": "path"
    },
    {
      "name": "cliente_standard",
      "field": "cliente",
      "pattern": "(?i)(AOU_BOLOGNA|ESTAR|ULSS9TV|AUSL_MO|ARIA[_\\s]?IRT|SanCarlo|Abruzzo|Basilicata|IHISCipro|RegioneEmiliaRomagna|Lombardia\\s*Informatica|LISPA|ASP\\s*Palermo|RER)",
      "scope": "path"
    },
    {
      "name": "program_tag",
      "field": "program",
      "pattern": "(?i)(?:^|/)_?(AQ)(?:/|$)",
      "scope": "path"
    },
    {
      "name": "lotto",
      "field": "lotto",
      "pattern": "(?i)(?:lotto|lotti)\\s*([0-9]+)",
      "scope": "path"
    },
    {
      "name": "cig",
      "field": "cig",
      "pattern": "(?i)CIG[-_:\\s]?([A-Z0-9]{10})",
      "scope": "path"
    },
    {
      "name": "id_file",
      "field": "id",
      "pattern": "(?i)\\bID\\s*([0-9]{2,7})\\b",
      "scope": "file"
    },
    {
      "name": "scheda_code",
      "field": "scheda",
      "pattern": "(?i)\\bSCH-([0-9]{2,6}(?:_[0-9]{2})?)\\b",
      "scope": "file"
    },
    {
      "name": "incarico_code",
      "field": "inc",
      "pattern": "(?i)\\bINC-([0-9]{2,6}(?:_[0-9]{2})?)\\b",
      "scope": "file"
    },
    {
      "name": "version",
      "field": "version",
      "pattern": "(?i)(?:\\b|_)(?:v|ver(?:sion)?)\\s*([0-9]+(?:\\.[0-9]+){0,3})(?:\\b|_)",
      "scope": "file"
    },
    {
      "name": "track_changes",
      "field": "track_changes",
      "pattern": "(?i)with\\s*track\\s*changes",
      "scope": "file"
    },
    {
      "name": "lang_tag",
      "field": "lang_raw",
      "pattern": "(?i)\\b(IT|ITA|Italiano|EN|ENG|English)\\b",
      "scope": "file"
    },
    {
      "name": "ext_full",
      "field": "ext",
      "pattern": "\\.([A-Za-z0-9]+(?:\\.p7m)?)$",
      "scope": "file"
    },
    {
      "name": "ext_simple",
      "field": "ext",
      "pattern": "\\.([A-Za-z0-9]+)$",
      "scope": "file"
    },
    {
      "name": "p7m_signed",
      "field": "signed",
      "pattern": "\\.p7m$",
      "scope": "file"
    },
    {
      "name": "size_class",
      "field": "size_class",
      "pattern": ".*",
      "scope": "file_size"
    },
    {
      "name": "area_AQ",
      "field": "area",
      "pattern": "(?i)(?:^|/)(01_Documentazione|02_Chiarimenti|03_AS|04_OffertaTecnica|05_ODA)(?:/|$)",
      "scope": "path"
    }
  ]
}